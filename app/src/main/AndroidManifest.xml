<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.schedule">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/school_days"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.Drawer.DrawerActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".Notifications.LongRunningService"/>
        <receiver android:name=".Notifications.AlarmReceiver"/>
        <activity
            android:parentActivityName=".Activity.Drawer.DrawerActivity"
            android:name=".Activity.Login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity

            android:name=".Activity.ScheduleDetail.ScheduleDetailActivity"
            android:label="detail" />
        <activity
            android:name=".Activity.AppSetting.SettingsActivity"
            android:parentActivityName=".Activity.Drawer.DrawerActivity"
            android:label="@string/title_activity_settings"></activity>

    </application>

</manifest>